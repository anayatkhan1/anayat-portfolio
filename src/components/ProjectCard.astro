---
import { Icon } from "astro-icon/components";
import { RiArrowRightUpLine } from "react-icons/ri";

const { project } = Astro.props;
const hasGithub = project.github;
---

<div class="flex flex-col items-start pt-2">
	<div class="group md:hover:bg-hoverColor relative -mx-3 w-full transform rounded-lg px-3 py-2 transition-all duration-300 ease-in-out md:hover:scale-105">
		<div
			class="text-title md:group-hover:text-primary flex items-center justify-between gap-2 text-sm font-medium tracking-tight">
			<div class="flex min-w-0 flex-1 items-center gap-1.5">
				<a href={project.link} target="_blank" rel="noreferrer">
					<h3>{project.title}</h3>
				</a>
				{hasGithub && (
					<a
						href={project.github}
						target="_blank"
						rel="noopener noreferrer"
						aria-label="View source on GitHub"
						class="shrink-0 text-body opacity-0 transition-opacity duration-150 md:group-hover:opacity-100 md:hover:text-primary">
						<Icon name="github" size={16} />
					</a>
				)}
				{
					project.tag && (
						<div class="shrink-0 rounded-full border border-emerald-700 bg-emerald-100 px-1.5 py-0.5 text-xs font-medium text-emerald-700">
							<span>{project.tag}</span>
						</div>
					)
				}
			</div>
			<a
				href={project.link}
				target="_blank"
				rel="noreferrer"
				class="shrink-0 text-primary opacity-0 transition-opacity duration-150 md:group-hover:opacity-100">
				<RiArrowRightUpLine className="h-4 w-4" />
			</a>
		</div>
		<a href={project.link} target="_blank" rel="noreferrer" class="block">
			<p class="text-body text-sm">{project.description}</p>
		</a>
	</div>
</div>
