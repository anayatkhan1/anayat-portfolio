---
import Layout from "../layouts/Layout.astro";
import { skillsByCategory } from "../constants/skills";
---

<Layout title="Anayat Khan â€¢ Skills">
	<h1 class="text-[2.5rem] font-serif tracking-tight text-primary">Skills</h1>
	<h2 class="text-base font-medium tracking-tight text-title">
		Technologies and tools I work with.
	</h2>

	<div class="pt-6">
		<div class="grid grid-cols-1 gap-3 md:grid-cols-2">
			{skillsByCategory.map(({ category, items }) => (
				<div
					class={`group relative h-full transform rounded-lg border border-body/20 border-dotted p-4 transition-all duration-300 ease-in-out md:hover:bg-hoverColor/50 md:hover:scale-[1.02] md:hover:border-primary/40 ${category === "Methodologies" ? "md:col-span-2" : ""}`}
				>
					<h3 class="text-title mb-3 text-sm font-medium tracking-tight">
						{category}
					</h3>
					<div class="flex flex-wrap gap-1.5">
						{items.map((skill) => (
							<span
								class="rounded-md border border-body/20 bg-bgColor px-2 py-1 text-xs text-body transition-colors duration-150 md:group-hover:border-primary/40 md:group-hover:text-black"
							>
								{skill}
							</span>
						))}
					</div>
				</div>
			))}
		</div>
	</div>
</Layout>
